{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Router",
    "description": "Router configuration",
    "type": "object",
    "properties": {
        "platform": {
            "description": "Platform configuration",
            "type": "object",
            "properties": {
                "port": {
                    "type": "object",
                    "maxProperties": 64,
                    "patternProperties": {
                        "^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])$": {
                            "type": "object",
                            "properties": {
                                "breakout-mode": {
                                    "enum": ["none", "4x100G"],
                                    "default": "none"
                                }
                            },
                            "required": [
                                "breakout-mode"
                            ],
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                }
            },
            "required": [
                "port"
            ],
            "additionalProperties": false
        },
        "interface": {
            "description": "Interface configuration",
            "type": "object",
            "properties": {
                "gigabit-ethernet": {
                    "description": "Ethernet interfaces collection",
                    "type": "object",
                    "maxProperties": 64,
                    "patternProperties": {
                        "^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])$": {
                            "description": "Main interface configuration",
                            "type": "object",
                            "properties": {
                                "speed": {
                                    "description": "Interface speed",
                                    "enum": ["100G", "400G"],
                                    "default": "400G"
                                }
                            },
                            "additionalProperties": false,
                            "update-dependencies": [
                                "/platform/port[@key]/breakout-mode"
                            ],
                            "delete-dependencies": [
                                "/interface/aggregate-ethernet",
                                "/vlan"
                            ],
                            "update-constraints": [
                                "#if #regex_match<#xpath<@key>, #regex<^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])$>> #equal #bool<true> #then #must<#xpath</platform/port[@key]/breakout-mode> #equal #string<none>>",
                                "#if #regex_match<#xpath<@key>, #regex<^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(\/[1-4])$>> #equal #bool<true> #then #must<#xpath</platform/port[@key]/breakout-mode> #not_equal #string<none>>"
                            ]
                        },
                        "^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(\/[1-4])$": {
                            "description": "Sub-interface configuration",
                            "type": "object",
                            "properties": {

                            },
                            "additionalProperties": false,
                            "update-dependencies": [
                                "/platform/port[@key]/breakout-mode"
                            ],
                            "delete-dependencies": [
                                "/interface/aggregate-ethernet",
                                "/vlan"
                            ],
                            "update-constraints": [
                                "#if #regex_match<#xpath<@key>, #regex<^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])$>> #equal #bool<true> #then #must<#xpath</platform/port[@key]/breakout-mode> #equal #string<none>>",
                                "#if #regex_match<#xpath<@key>, #regex<^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(\/[1-4])$>> #equal #bool<true> #then #must<#xpath</platform/port[@key]/breakout-mode> #not_equal #string<none>>"
                            ]
                        }
                    },
                    "additionalProperties": false,
                    "update-dependencies": [
                        "/platform/port[@key]/breakout-mode"
                    ],
                    "delete-dependencies": [
                        "/interface/aggregate-ethernet",
                        "/vlan"
                    ],
                    "update-constraints": [
                        "#if #regex_match<#xpath<@key>, #regex<^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])$>> #equal #bool<true> #then #must<#xpath</platform/port[@key]/breakout-mode> #equal #string<none>>",
                        "#if #regex_match<#xpath<@key>, #regex<^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(\/[1-4])$>> #equal #bool<true> #then #must<#xpath</platform/port[@key]/breakout-mode> #not_equal #string<none>>"
                    ]
                },
                "aggregate-ethernet": {
                    "description": "Aggregate Ethernet Interfaces collection",
                    "type": "object",
                    "uniqueItems": true,
                    "maxProperties": 32,
                    "patternProperties": {
                        "^ae-(6[5-6])|ae-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])$": {
                            "type": "object",
                            "properties": {
                                "members": {
                                    "description": "Members of Aggregate Interface",
                                    "type": "array",
                                    "uniqueItems": true,
                                    "items": {
                                        "type": "string",
                                        "pattern": "^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(\/[1-4])?$",
                                        "reference": "/interface/gigabit-ethernet[@key]"
                                    },
                                    "update-dependencies": [
                                        "/interface/gigabit-ethernet/*"
                                    ]
                                },
                                "control-protocol": {
                                    "description": "Control protocol",
                                    "enum": ["none", "lacp"],
                                    "default": "none"
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false,
                    "delete-constraints": [
                        "#must<#count</interface/aggregate-ethernet[@key]/members> #equal #number<0>>"
                    ]
                }
            },
            "required": [
                "aggregate-ethernet",
                "gigabit-ethernet"
            ],
            "additionalProperties": false
        },
        "vlan": {
            "description": "VLAN configuration",
            "type": "object",
            "properties": {
                "id": {
                    "type": "object",
                    "uniqueItems": true,
                    "maxProperties": 4095,
                    "description": "VLANs collection",
                    "patternProperties": {
                        "^((40[0-9][0-5])|([1-3][0-9][0-9][0-9])|([0-9][0-9])|[1-9])$": {
                            "type": "object",
                            "properties": {
                                "members": {
                                    "description": "Members of VLAN",
                                    "type": "array",
                                    "uniqueItems": true,
                                    "items": {
                                        "type": "string",
                                        "pattern": "^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(\/[1-4])?$",
                                        "reference": "/interface/gigabit-ethernet[@key]",
                                        "additionalProperties": false
                                    },
                                    "update-dependencies": [
                                        "/interface/aggregate-ethernet/*/members",
                                        "/interface/gigabit-ethernet/*"
                                    ],
                                    "update-constraints": [
                                        "#if #regex_match<#xpath<@key>, #regex<^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(\/[1-4])?$>> #equal #bool<true> #then #must<#exists</interface/ethernet[@key]> #equal #bool<true>>",
                                        "#if #regex_match<#xpath<@key>, #regex<^ae-(6[5-6])|ae-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])$>> #equal #bool<true> #then #must<#exists</interface/ethernet[@key]> #equal #bool<true>>"
                                    ],
                                    "update-action": {
                                        "method-name": "add_vlan",
                                        "port": "8080",
                                        "path": "@key",
                                        "value": "@value"
                                    },
                                    "delete-action": {
                                        "method-name": "remove_vlan",
                                        "port": "8080",
                                        "path": "@key",
                                        "value": "@value"
                                    }
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false,
                    "delete-constraints": [
                        "#must<#count</vlan/id[@key]/members> #equal #number<0>>"
                    ]
                }
            },
            "additionalProperties": false
        },
        "protocol": {
            "description": "Protocol configuration",
            "type": "object",
            "properties": {
                "lldp": {
                    "type": "object"
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "platform",
        "interface",
        "vlan",
        "protocol"
    ],
    "additionalProperties": false
}