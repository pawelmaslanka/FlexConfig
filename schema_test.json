{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Router",
    "description": "Router configuration",
    "type": "object",
    "properties": {
        "platform": {
            "description": "Platform configuration",
            "type": "object",
            "properties": {
                "port": {
                    "type": "object",
                    "maxProperties": 64,
                    "patternProperties": {
                        "^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])$": {
                            "type": "object",
                            "properties": {
                                "breakout-mode": {
                                    "enum": ["none", "4x100G"],
                                    "default": "none",
                                    "action": {
                                        "on-update-path": "/update",
                                        "on-delete-path": "/delete",
                                        "server-address": "127.0.0.1:8000"
                                    }
                                }
                            },
                            "required": [
                                "breakout-mode"
                            ],
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                }
            },
            "required": [
                "port"
            ],
            "additionalProperties": false
        },
        "interface": {
            "description": "Interface configuration",
            "type": "object",
            "properties": {
                "gigabit-ethernet": {
                    "description": "Ethernet interfaces collection",
                    "type": "object",
                    "maxProperties": 64,
                    "patternProperties": {
                        "^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])$": {
                            "description": "Main interface configuration",
                            "type": "object",
                            "properties": {
                                "speed": {
                                    "description": "Interface speed",
                                    "enum": ["100G", "400G"],
                                    "default": "400G",
                                    "action": {
                                        "on-update-path": "/update",
                                        "server-address": "127.0.0.1:8000"
                                    }
                                }
                            },
                            "additionalProperties": false,
                            "action": {
                                "on-update-path": "/update",
                                "on-delete-path": "/delete",
                                "server-address": "127.0.0.1:8000"
                            },
                            "update-dependencies": [
                                "/platform/port[@key]/breakout-mode"
                            ],
                            "delete-dependencies": [
                                "/interface/aggregate-ethernet",
                                "/vlan"
                            ],
                            "update-constraints": [
                                "must(xpath('/platform/port[@key]/breakout-mode/value') = 'none')"
                            ]
                        },
                        "^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(\/[1-4])$": {
                            "description": "Sub-interface configuration",
                            "type": "object",
                            "properties": {

                            },
                            "additionalProperties": false,
                            "action": {
                                "on-update-path": "/update",
                                "on-delete-path": "/delete",
                                "server-address": "127.0.0.1:8000"
                            },
                            "update-dependencies": [
                                "/platform/port[@key]/breakout-mode"
                            ],
                            "delete-dependencies": [
                                "/interface/aggregate-ethernet",
                                "/vlan"
                            ],
                            "update-constraints": [
                                "must(xpath('/platform/port[@key]/breakout-mode/value') ~ 'none')"
                            ]
                        }
                    },
                    "additionalProperties": false
                },
                "aggregate-ethernet": {
                    "description": "Aggregate Ethernet Interfaces collection",
                    "type": "object",
                    "uniqueItems": true,
                    "maxProperties": 32,
                    "patternProperties": {
                        "^ae-(6[5-6])|ae-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])$": {
                            "type": "object",
                            "properties": {
                                "members": {
                                    "description": "Members of Aggregate Interface",
                                    "type": "array",
                                    "uniqueItems": true,
                                    "items": {
                                        "type": "string",
                                        "pattern": "^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(\/[1-4])?$",
                                        "additionalProperties": false
                                    },
                                    "reference": [
                                        "/interface/gigabit-ethernet/@"
                                    ],
                                    "action": {
                                        "on-update-path": "/update",
                                        "on-delete-path": "/delete",
                                        "server-address": "127.0.0.1:8000"
                                    },
                                    "update-dependencies": [
                                        "/interface/gigabit-ethernet/*"
                                    ],
                                    "update-constraints": [
                                        "must(exists(@))"
                                    ]
                                },
                                "control-protocol": {
                                    "description": "Control protocol",
                                    "enum": ["none", "lacp"],
                                    "default": "none"
                                }
                            },
                            "additionalProperties": false,
                            "action": {
                                "on-update-path": "/update",
                                "on-delete-path": "/delete",
                                "server-address": "127.0.0.1:8000"
                            },
                            "delete-constraints": [
                                "must(count(xpath('//interface/aggregate-ethernet[@key]/members')) = 0)"
                            ]
                        }
                    },
                    "additionalProperties": false
                }
            },
            "required": [
            ],
            "additionalProperties": false
        },
        "vlan": {
            "description": "VLAN configuration",
            "type": "object",
            "properties": {
                "id": {
                    "type": "object",
                    "uniqueItems": true,
                    "maxProperties": 4095,
                    "description": "VLANs collection",
                    "patternProperties": {
                        "^((40[0-9][0-5])|([1-3][0-9][0-9][0-9])|([0-9][0-9])|[1-9])$": {
                            "type": "object",
                            "properties": {
                                "members": {
                                    "description": "Members of VLAN",
                                    "type": "array",
                                    "uniqueItems": true,
                                    "items": {
                                        "type": "string",
                                        "pattern": "^ge-(6[5-6])|ge-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(\/[1-4])?$",
                                        "additionalProperties": false
                                    },
                                    "reference": [
                                        "/interface/aggregate-ethernet/@",
                                        "/interface/gigabit-ethernet/@"
                                    ],
                                    "update-dependencies": [
                                        "/interface/aggregate-ethernet/*/members",
                                        "/interface/gigabit-ethernet/*"
                                    ],
                                    "update-constraints": [
                                        "must(exists(@))"
                                    ],
                                    "action": {
                                        "on-update-path": "/update",
                                        "on-delete-path": "/delete",
                                        "server-address": "127.0.0.1:8000"
                                    }
                                }
                            },
                            "additionalProperties": false,
                            "action": {
                                "on-update-path": "/update",
                                "on-delete-path": "/delete",
                                "server-address": "127.0.0.1:8000"
                            },
                            "delete-constraints": [
                                "must(count(xpath('/vlan/id[@key]/members')) = 0)"
                            ]
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "protocol": {
            "description": "Protocol configuration",
            "type": "object",
            "properties": {
                "lldp": {
                    "type": "object"
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "platform",
        "interface",
        "vlan",
        "protocol"
    ],
    "additionalProperties": false
}