{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Router",
    "description": "Router configuration",
    "type": "object",
    "properties": {
        "platform": {
            "description": "Platform configuration",
            "type": "object",
            "properties": {
                "port": {
                    "type": "object",
                    "maxProperties": 64,
                    "patternProperties": {
                        "^(eth-(6[5-6])|eth-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9]))$": {
                            "type": "object",
                            "properties": {
                                "breakout-mode": {
                                    "enum": ["none", "4x100G"],
                                    "default": "none",
                                    "update-constraints": [
                                        "if (xpath_value('/platform/port[@item]/breakout-mode') <> 'none') then must(exists(xpath_key_based('/interface/ethernet[@item]', '/platform/port[@item]')) == false)",
                                        "if (xpath_value('/platform/port[@item]/breakout-mode') == 'none') then must(exists(xpath_match_regex('/interface/ethernet[@item]', '/interface/ethernet/*', '^(eth-(6[5-6])|eth-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(_[1-4]))$')) == false)"
                                    ],
                                    "action": {
                                        "on-update-path": "/update",
                                        "on-delete-path": "/delete",
                                        "server-address": "127.0.0.1:8000"
                                    }
                                },
                                "additionalProperties": false
                            },
                            "required": [
                                "breakout-mode"
                            ],
                            "additionalProperties": false
                        }
                    },
                    "allOf": [{
                        "anyOf": [
                            { "required": [ "eth-1" ]  }, { "required": [ "eth-2" ]  }, { "required": [ "eth-3" ]  }, { "required": [ "eth-4" ]  }, { "required": [ "eth-5" ]  }, { "required": [ "eth-6" ]  }, { "required": [ "eth-7" ]  }, { "required": [ "eth-8" ]  }, { "required": [ "eth-9" ]  }, { "required": [ "eth-10" ] },
                            { "required": [ "eth-11" ] }, { "required": [ "eth-12" ] }, { "required": [ "eth-13" ] }, { "required": [ "eth-14" ] }, { "required": [ "eth-15" ] }, { "required": [ "eth-16" ] }, { "required": [ "eth-17" ] }, { "required": [ "eth-18" ] }, { "required": [ "eth-19" ] }, { "required": [ "eth-20" ] },
                            { "required": [ "eth-21" ] }, { "required": [ "eth-22" ] }, { "required": [ "eth-23" ] }, { "required": [ "eth-24" ] }, { "required": [ "eth-25" ] }, { "required": [ "eth-26" ] }, { "required": [ "eth-27" ] }, { "required": [ "eth-28" ] }, { "required": [ "eth-29" ] }, { "required": [ "eth-30" ] },
                            { "required": [ "eth-31" ] }, { "required": [ "eth-32" ] }, { "required": [ "eth-33" ] }, { "required": [ "eth-34" ] }, { "required": [ "eth-35" ] }, { "required": [ "eth-36" ] }, { "required": [ "eth-37" ] }, { "required": [ "eth-38" ] }, { "required": [ "eth-39" ] }, { "required": [ "eth-40" ] },
                            { "required": [ "eth-41" ] }, { "required": [ "eth-42" ] }, { "required": [ "eth-43" ] }, { "required": [ "eth-44" ] }, { "required": [ "eth-45" ] }, { "required": [ "eth-46" ] }, { "required": [ "eth-47" ] }, { "required": [ "eth-48" ] }, { "required": [ "eth-49" ] }, { "required": [ "eth-50" ] },
                            { "required": [ "eth-51" ] }, { "required": [ "eth-52" ] }, { "required": [ "eth-53" ] }, { "required": [ "eth-54" ] }, { "required": [ "eth-55" ] }, { "required": [ "eth-56" ] }, { "required": [ "eth-57" ] }, { "required": [ "eth-58" ] }, { "required": [ "eth-59" ] }, { "required": [ "eth-60" ] },
                            { "required": [ "eth-61" ] }, { "required": [ "eth-62" ] }, { "required": [ "eth-63" ] }, { "required": [ "eth-64" ] }
                        ]
                    }],
                    "additionalProperties": false
                },
                "additionalProperties": false
            },
            "required": [
                "port"
            ],
            "additionalProperties": false
        },
        "interface": {
            "description": "Interface configuration",
            "type": "object",
            "properties": {
                "ethernet": {
                    "description": "Ethernet interfaces collection",
                    "type": "object",
                    "maxProperties": 64,
                    "patternProperties": {
                        "^(eth-(6[5-6])|eth-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(_[1-4])?)$": {
                            "description": "Interface configuration",
                            "type": "object",
                            "properties": {
                                "auto-negotiation": {
                                    "description": "Interface autonegotiation",
                                    "enum": ["enabled", "disabled"],
                                    "default": "disabled",
                                    "update-dependencies": [
                                        "/interface/ethernet[@item]/speed"
                                    ],
                                    "action": {
                                        "on-update-path": "/update",
                                        "on-delete-path": "/delete",
                                        "server-address": "127.0.0.1:8000"
                                    },
                                    "additionalProperties": false
                                },
                                "speed": {
                                    "description": "Interface speed",
                                    "enum": ["fixed", "100G", "400G"],
                                    "default": "400G",
                                    "update-constraints": [
                                        "if (xpath_value('/interface/ethernet[@item]/speed') == 'fixed') then must(xpath_value_key_regex_replace('/platform/port[@item]/breakout-mode', '^eth-(6[5-6])|eth-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])') <> 'none')",
                                        "if (xpath_value('/interface/ethernet[@item]/speed') <> 'fixed') then must(xpath_value('/platform/port[@item]/breakout-mode') == 'none')"
                                    ],
                                    "action": {
                                        "on-update-path": "/update",
                                        "server-address": "127.0.0.1:8000"
                                    },
                                    "additionalProperties": false
                                }
                            },
                            "required": [
                                "speed"
                            ],
                            "update-dependencies": [
                                "/platform/port[@item]/breakout-mode"
                            ],
                            "delete-dependencies": [
                                "/interface/aggregate-ethernet",
                                "/vlan"
                            ],
                            "update-constraints": [
                                "if (exists(xpath('/platform/port[@item]')) == false) then must(exists(xpath_match_regex('/interface/ethernet[@item]', '/interface/ethernet/*', '^eth-(6[5-6])|eth-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])$')) == false)",
                                "if (exists(xpath('/platform/port[@item]')) == false) then must(xpath_value_key_regex_replace('/platform/port[@item]/breakout-mode', '^eth-(6[5-6])|eth-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])') <> 'none')",
                                "if (exists(xpath('/platform/port[@item]')) == true) then must(exists(xpath_match_regex('/interface/ethernet[@item]', '/interface/ethernet/*', '^eth-(6[5-6])|eth-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(_[1-4])$')) == false)",
                                "if (exists(xpath('/platform/port[@item]')) == true) then must(xpath_value('/platform/port[@item]/breakout-mode') == 'none')"
                            ],
                            "action": {
                                "on-update-path": "/update",
                                "on-delete-path": "/delete",
                                "server-address": "127.0.0.1:8000"
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                },
                "aggregate-ethernet": {
                    "description": "Aggregate Ethernet Interfaces collection",
                    "type": "object",
                    "uniqueItems": true,
                    "maxProperties": 32,
                    "patternProperties": {
                        "^(ae-(6[5-6])|ae-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9]))$": {
                            "type": "object",
                            "properties": {
                                "members": {
                                    "description": "Members of Aggregate Interface",
                                    "type": "object",
                                    "patternProperties": {
                                        "^(eth-(6[5-6])|eth-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(_[1-4])?)$": {
                                            "type": "null",
                                            "reference": [
                                                "/interface/ethernet/@"
                                            ],
                                            "action": {
                                                "on-update-path": "/update",
                                                "on-delete-path": "/delete",
                                                "server-address": "127.0.0.1:8000"
                                            },
                                            "update-dependencies": [
                                                "/interface/ethernet[@item]",
                                                "/interface/ethernet[@item]/speed",
                                                "/interface/ethernet[@item]/auto-negotiation",
                                                "/protocol/lacp[@item]"
                                            ],
                                            "update-constraints": [
                                                "must(exists(xpath(@)))",
                                                "must(exists(xpath_any('/vlan/*/members/@')) == false)"
                                            ],
                                            "additionalProperties": false
                                        }
                                    },
                                    "additionalProperties": false
                                },
                                "additionalProperties": false
                            },
                            "action": {
                                "on-update-path": "/update",
                                "on-delete-path": "/delete",
                                "server-address": "127.0.0.1:8000"
                            },
                            "delete-constraints": [
                                "must(count(xpath('/interface/aggregate-ethernet[@item]/members')) == 0)"
                            ],
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                },
                "additionalProperties": false
            },
            "required": [
            ],
            "additionalProperties": false
        },
        "vlan": {
            "description": "VLAN configuration",
            "type": "object",
            "uniqueItems": true,
            "maxProperties": 4095,
            "patternProperties": {
                "^((40[0-9][0-5])|([1-3][0-9][0-9][0-9])|([0-9][0-9])|[1-9])$": {
                    "description": "VLAN ID",
                    "type": "object",
                    "properties": {
                        "members": {
                            "description": "Members of VLAN",
                            "type": "object",
                            "patternProperties": {
                                "(tagged|untagged|native)": {
                                    "description": "Mode",
                                    "type": "object",
                                    "patternProperties": {
                                        "^(eth-(6[5-6])|eth-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(_[1-4])?)$": {
                                            "type": "null",
                                            "reference": [
                                                "/interface/ethernet/@"
                                            ],
                                            "update-dependencies": [
                                                "/interface/ethernet[@item]"
                                            ],
                                            "update-constraints": [
                                                "must(exists(xpath(@)))",
                                                "must(exists(xpath_any('/interface/aggregate-ethernet/*/members/@')) == false)"
                                            ],
                                            "action": {
                                                "on-update-path": "/update",
                                                "on-delete-path": "/delete",
                                                "server-address": "127.0.0.1:8000"
                                            },
                                            "additionalProperties": false
                                        },
                                        "^(ae-(6[5-6])|ae-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9]))$": {
                                            "type": "null",
                                            "reference": [
                                                "/interface/aggregate-ethernet/@"
                                            ],
                                            "update-dependencies": [
                                                "/interface/aggregate-ethernet/*/members/@"
                                            ],
                                            "update-constraints": [
                                                "must(exists(xpath(@)))"
                                            ],
                                            "action": {
                                                "on-update-path": "/update",
                                                "on-delete-path": "/delete",
                                                "server-address": "127.0.0.1:8000"
                                            },
                                            "additionalProperties": false
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            },
                            "additionalProperties": false
                        },
                        "additionalProperties": false
                    },
                    "action": {
                        "on-update-path": "/update",
                        "on-delete-path": "/delete",
                        "server-address": "127.0.0.1:8000"
                    },
                    "delete-constraints": [
                        "must(count(xpath('/vlan[@item]/members')) == 0)"
                    ],
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "protocol": {
            "description": "Protocol configuration",
            "type": "object",
            "properties": {
                "lacp": {
                    "description": "Link Aggregation Control Protocol",
                    "type": "object",
                    "patternProperties": {
                        "^(ae-(6[5-6])|ae-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9]))$": {
                            "type": "object",
                            "properties": {
                            },
                            "reference": [
                                "/interface/aggregate-ethernet/@"
                            ],
                            "update-dependencies": [
                                "/interface/aggregate-ethernet[@item]"
                            ],
                            "update-constraints": [
                                "must(exists(xpath(@)))"
                            ],
                            "action": {
                                "on-update-path": "/update",
                                "on-delete-path": "/delete",
                                "server-address": "127.0.0.1:8000"
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                },
                "lldp": {
                    "type": "object"
                },
                "additionalProperties": false
            },
            "additionalProperties": false
        },
        "additionalProperties": false
    },
    "required": [
        "platform",
        "interface",
        "vlan",
        "protocol"
    ],
    "additionalProperties": false
}
