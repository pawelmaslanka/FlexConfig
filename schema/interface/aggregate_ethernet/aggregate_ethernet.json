{
    "properties": {
        "interface": {
            "properties": {
                "aggregate-ethernet": {
                    "description": "Aggregate Ethernet Interfaces collection",
                    "type": "object",
                    "uniqueItems": true,
                    "maxProperties": 32,
                    "patternProperties": {
                        "^(lag-(6[5-6])|lag-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9]))$": {
                            "type": "object",
                            "properties": {
                                "mac-address": {
                                    "description": "Represents a MAC Address in the standard colon delimited format. Eg. `01:23:45:67:89:0A`",
                                    "type": "string",
                                    "pattern": "^([A-F0-9]{2}:){5}[A-F0-9]{2}$",
                                    "action": {
                                        "on-update-path": "/update",
                                        "server-address": "127.0.0.1:8000"
                                    }
                                },
                                "members": {
                                    "description": "Members of Aggregate Interface",
                                    "type": "object",
                                    "patternProperties": {
                                        "^(eth1-(6[5-6])|eth1-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(_[1-4])?)$": {
                                            "type": "null",
                                            "reference": [
                                                "/interface/ethernet/@"
                                            ],
                                            "action": {
                                                "on-update-path": "/update",
                                                "on-delete-path": "/delete",
                                                "server-address": "127.0.0.1:8000"
                                            },
                                            "update-dependencies": [
                                                "/interface/ethernet[@item]",
                                                "/interface/ethernet[@item]/speed",
                                                "/interface/ethernet[@item]/auto-negotiation"
                                            ],
                                            "update-constraints": [
                                                "must(exists(xpath(@)))",
                                                "must(exists(xpath_any('/vlan/*/members/@')) == false)"
                                            ]
                                        }
                                    },
                                    "additionalProperties": false
                                },
                                "protocol": {
                                    "description": "LAG management protocol",
                                    "enum": ["none", "lacp"],
                                    "default": "none",
                                    "action": {
                                        "on-update-path": "/update",
                                        "server-address": "127.0.0.1:8000"
                                    }
                                }
                            },
                            "additionalProperties": false,
                            "required": [ "mac-address" ],
                            "action": {
                                "on-update-path": "/update",
                                "on-delete-path": "/delete",
                                "server-address": "127.0.0.1:8000"
                            },
                            "action-parameters": {
                                "on-update": [
                                    "mac-address",
                                    "protocol"
                                ]
                            },
                            "delete-constraints": [
                                "must(count(xpath('/interface/aggregate-ethernet[@item]/members')) == 0)"
                            ]
                        }
                    },
                    "additionalProperties": false
                }
            }
        }
    }
}
