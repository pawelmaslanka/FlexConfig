{
    "properties": {
        "interface": {
            "properties": {
                "ethernet": {
                    "description": "Ethernet interfaces collection",
                    "type": "object",
                    "maxProperties": 64,
                    "patternProperties": {
                        "^(eth1-(6[5-6])|eth1-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(_[1-4])?)$": {
                            "description": "Interface configuration",
                            "type": "object",
                            "properties": {
                                "auto-negotiation": {
                                    "description": "Interface autonegotiation",
                                    "enum": ["enabled", "disabled"],
                                    "default": "disabled",
                                    "update-dependencies": [
                                        "/interface/ethernet[@item]/speed"
                                    ],
                                    "action": {
                                        "on-update-path": "/update",
                                        "on-delete-path": "/delete",
                                        "server-address": "127.0.0.1:8000"
                                    },
                                    "additionalProperties": false
                                },
                                "speed": {
                                    "description": "Interface speed",
                                    "enum": ["fixed", "100G", "400G"],
                                    "default": "400G",
                                    "update-constraints": [
                                        "if (xpath_value('/interface/ethernet[@item]/speed') == 'fixed') then must(xpath_value_key_regex_replace('/platform/port[@item]/breakout-mode', '^eth1-(6[5-6])|eth1-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])') <> 'none')",
                                        "if (xpath_value('/interface/ethernet[@item]/speed') <> 'fixed') then must(xpath_value('/platform/port[@item]/breakout-mode') == 'none')"
                                    ],
                                    "action": {
                                        "on-update-path": "/update",
                                        "server-address": "127.0.0.1:8000"
                                    },
                                    "additionalProperties": false
                                }
                            },
                            "required": [
                                "speed"
                            ],
                            "update-dependencies": [
                                "/platform/port[@item]/breakout-mode"
                            ],
                            "delete-dependencies": [
                                "/interface/aggregate-ethernet",
                                "/vlan"
                            ],
                            "update-constraints": [
                                "if (exists(xpath('/platform/port[@item]')) == false) then must(exists(xpath_match_regex('/interface/ethernet[@item]', '/interface/ethernet/*', '^eth1-(6[5-6])|eth1-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])$')) == false)",
                                "if (exists(xpath('/platform/port[@item]')) == false) then must(xpath_value_key_regex_replace('/platform/port[@item]/breakout-mode', '^eth1-(6[5-6])|eth1-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])') <> 'none')",
                                "if (exists(xpath('/platform/port[@item]')) == true) then must(exists(xpath_match_regex('/interface/ethernet[@item]', '/interface/ethernet/*', '^eth1-(6[5-6])|eth1-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(_[1-4])$')) == false)",
                                "if (exists(xpath('/platform/port[@item]')) == true) then must(xpath_value('/platform/port[@item]/breakout-mode') == 'none')"
                            ],
                            "action": {
                                "on-update-path": "/update",
                                "on-delete-path": "/delete",
                                "server-address": "127.0.0.1:8000"
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                }
            }
        }
    }
}
