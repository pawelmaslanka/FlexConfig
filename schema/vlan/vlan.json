{
    "properties": {
        "vlan": {
            "description": "VLAN configuration",
            "type": "object",
            "uniqueItems": true,
            "maxProperties": 4095,
            "patternProperties": {
                "^((40[0-9][0-5])|([1-3][0-9][0-9][0-9])|([0-9][0-9])|[1-9])$": {
                    "description": "VLAN ID",
                    "type": "object",
                    "properties": {
                        "members": {
                            "description": "Members of VLAN",
                            "type": "object",
                            "patternProperties": {
                                "(tagged|untagged|native)": {
                                    "description": "Mode",
                                    "type": "object",
                                    "patternProperties": {
                                        "^(eth1-(6[5-6])|eth1-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9])(_[1-4])?)$": {
                                            "type": "null",
                                            "reference": [
                                                "/interface/ethernet/@"
                                            ],
                                            "update-dependencies": [
                                                "/interface/ethernet[@item]"
                                            ],
                                            "update-constraints": [
                                                "must(exists(xpath(@)))",
                                                "must(exists(xpath_any('/interface/aggregate-ethernet/*/members/@')) == false)"
                                            ],
                                            "action": {
                                                "on-update-path": "/update",
                                                "on-delete-path": "/delete",
                                                "server-address": "127.0.0.1:8000"
                                            }
                                        },
                                        "^(lag-(6[5-6])|lag-(6[0-6]|5[0-9]|4[0-9]|3[0-9]|2[0-9]|1[0-9]|[1-9]))$": {
                                            "type": "null",
                                            "reference": [
                                                "/interface/aggregate-ethernet/@"
                                            ],
                                            "update-dependencies": [
                                                "/interface/aggregate-ethernet/*/members/@"
                                            ],
                                            "update-constraints": [
                                                "must(exists(xpath(@)))"
                                            ],
                                            "action": {
                                                "on-update-path": "/update",
                                                "on-delete-path": "/delete",
                                                "server-address": "127.0.0.1:8000"
                                            }
                                        }
                                    },
                                    "additionalProperties": false
                                }
                            },
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false,
                    "action": {
                        "on-update-path": "/update",
                        "on-delete-path": "/delete",
                        "server-address": "127.0.0.1:8000"
                    },
                    "delete-constraints": [
                        "must(count(xpath('/vlan[@item]/members')) == 0)"
                    ]
                }
            },
            "additionalProperties": false
        }
    }
}
